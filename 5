	<script>
		
		var arr = [];
		
		function addToBasket (product) {
			
			if (product.sklad >= 1) {		
				alert('товар в корзине');
				arr.push(product);	
				countBasketPrice(arr);
				product.bask = product.bask + 1;
				product.sklad = product.sklad - 1;
			} 
			else {
				alert('товар на складе закончился');
			}
			
			console.log(product.sklad);
			
		}
		
		function clearBasket () {
			arr = [];	
			productID_0.sklad = productID_0.sklad  + productID_0.bask;
			productID_0.bask = 0;
			productID_1.sklad = productID_1.sklad  + productID_1.bask;
			productID_1.bask = 0;
			productID_2.sklad = productID_2.sklad  + productID_2.bask;
			productID_2.bask = 0;
			productID_3.sklad = productID_3.sklad  + productID_3.bask;
			productID_3.bask = 0;
			productID_4.sklad = productID_4.sklad  + productID_4.bask;
			productID_4.bask = 0;
			productID_5.sklad = productID_5.sklad  + productID_5.bask;
			productID_5.bask = 0;
			productID_6.sklad = productID_6.sklad  + productID_6.bask;
			productID_6.bask = 0;
			productID_7.sklad = productID_7.sklad  + productID_7.bask;
			productID_7.bask = 0;
			countBasketPrice(arr);
			
		}
			
		
	
		function countBasketPrice (arr) {
			var basket = {
				sum: 0,
				pcs: 0,
			};
			var $div = document.getElementById('basket');
			for(var i = 0; i < arr.length; i++) {
				basket.sum += arr[i].price * arr[i].pcs;
				basket.pcs += arr[i].pcs;
			}
			
			console.log(basket);
			console.log(arr);
			
			if (basket.sum == 0) { $div.textContent = 'товар не добавлен'; }
			else {
				
				$div.textContent = basket.pcs+ ' ' + 'товар' + ' на сумму ' +basket.sum+ ' рублей';
				
			}
			
		}
		
		countBasketPrice(arr);
		
		
	</script>
